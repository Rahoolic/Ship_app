<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" style="position: relative;">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "Logo.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="search d-flex align-items-center" style="position: absolute; left: 250px; align-items: center;">
    <input type="text" placeholder="Search.." class="search-input">
    <a href="#"><i class="fas fa-search"></i></a>
  </div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
    <li class="nav-item active">
        <%= link_to "Home", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Yachts", boats_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Destinations", "#", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Events", "#", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Reviews", "#", class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <%= image_tag "user.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Messages", "#", class: "dropdown-item" %>
          <%= link_to "Notifications", "#", class: "dropdown-item" %>
           <%= link_to "Wishlists", "#", class: "dropdown-item" %>
           <%= link_to "Host your boat", "#", class: "dropdown-item" %>
           <%= link_to "Account", "#", class: "dropdown-item" %>
           <%= link_to "Help", "#", class: "dropdown-item" %>
           <%= link_to "Logout", destroy_user_session_path, :method => :delete, class: "dropdown-item" %> <% link_to user_session, class: "nav-link" %>
        </div>
      </li>
    </ul>
  </div>
</div>
